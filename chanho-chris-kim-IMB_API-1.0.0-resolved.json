  "servers": [
    {
      "url": "https://virtserver.swaggerhub.com/chanho-chris-kim/IMB_API/1.0.0",
      "description": "SwaggerHub API Auto Mocking"
    }
  ],
  "tags": [
    {
      "name": "admins",
      "description": "Secured Admin-only calls"
    },
    {
      "name": "developers",
      "description": "Operations available to regular developers"
    }
  ],
  "paths": {
    "/api/product": {
      "get": {
        "tags": [
          "developers"
        ],
        "summary": "searches product",
        "description": "using /api/product with GET you can fetch the list of products and get return value of an array of object\n",
        "operationId": "searchInventory",
        "parameters": [
          {
            "name": "searchString",
            "in": "query",
            "description": "does not need parameter",
            "required": false,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "search results matching criteria",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/InventoryItem"
                  }
                }
              }
            }
          },
          "400": {
            "description": "bad input parameter"
          }
        }
      },
      "post": {
        "tags": [
          "admins"
        ],
        "summary": "adds an inventory item",
        "description": "Adds an item to the system",
        "operationId": "addInventory",
        "requestBody": {
          "description": "Inventory item to add",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/InventoryItem"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "item created"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "InventoryItem": {
        "required": [
          "Developers",
          "methodology",
          "productId",
          "productName",
          "productOwnerName",
          "scrumMasterName",
          "startDate"
        ],
        "type": "object",
        "properties": {
          "productId": {
            "type": "integer",
            "format": "AUTOINCREMENT",
            "example": 1
          },
          "productName": {
            "type": "string",
            "example": "augue id ante dctum curus."
          },
          "productOwnerName": {
            "type": "string",
            "example": "anna"
          },
          "Developers": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "lisa, anna, michael, jek"
            }
          },
          "scrumMasterName": {
            "type": "string",
            "example": "lisa"
          },
          "startDate": {
            "type": "string",
            "format": "date",
            "example": "2022-05-29"
          },
          "methodology": {
            "type": "string",
            "example": "agile"
          }
        }
      }
    }
  }
}